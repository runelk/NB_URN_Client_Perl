#!/usr/bin/env perl

use strict;
use File::Basename;
use File::Spec;
use Data::Dumper;
use lib File::Spec->catdir(dirname(__FILE__), '..', 'lib');
require NbUrnClient;
use Getopt::Long;

my $default_config = File::Spec->rel2abs(
    File::Spec->catfile(dirname(__FILE__), '..', 'config', 'config.yml')
);

my $series_code;
my $config;
my $username;
my $password;
GetOptions(
    "series-code=s" => \$series_code,
    "username=s" => \$username,
    "password=s" => \$password,
    "config=s" => \$config
);

unless ($series_code) { die "Usage: get_next_urn --series-code CODE\n"; };

my $c = new NbUrnClient(
    config_file => $config || $default_config,
    username => $username,
    password => $password
);

$c->login();
print Dumper($c->get_next_urn($series_code));
$c->logout();

