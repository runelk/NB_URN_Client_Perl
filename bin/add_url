#!/usr/bin/env perl

use strict;
use File::Basename;
use File::Spec;
use Data::Dumper;
use lib File::Spec->catdir(dirname(__FILE__), '..', 'lib');
require NbUrnClient;
use Getopt::Long;

my $default_config = File::Spec->rel2abs(
    File::Spec->catfile(dirname(__FILE__), '..', 'config', 'config.yml')
);

my $urn;
my $url;
my $config;
my $username;
my $password;
GetOptions(
    "urn=s" => \$urn,
    "url=s" => \$url,
    "username=s" => \$username,
    "password=s" => \$password,
    "config=s" => \$config
);

unless ($urn && $url) { die "Usage: add_urn --urn URN --url URL\n"; };

my $c = new NbUrnClient(
    config_file => $config || $default_config,
    username => $username,
    password => $password
);

$c->login();
print Dumper($c->add_url($urn, $url));
$c->logout();

