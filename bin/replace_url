#!/usr/bin/env perl

use strict;
use File::Basename;
use File::Spec;
use Data::Dumper;
use lib File::Spec->catdir(dirname(__FILE__), '..', 'lib');
require NbUrnClient;
use Getopt::Long;

my $default_config = File::Spec->rel2abs(
    File::Spec->catfile(dirname(__FILE__), '..', 'config', 'config.yml')
);

my $urn;
my $old_url;
my $new_url;
my $config;
my $username;
my $password;
GetOptions(
    "urn=s" => \$urn,
    "old-url=s" => \$old_url,
    "new-url=s" => \$new_url,
    "username=s" => \$username,
    "password=s" => \$password,
    "config=s" => \$config
);

unless ($urn && $old_url && $new_url) { die "Usage: replace_url --urn URN --old-url URL --new-url URL\n"; };

my $c = new NbUrnClient(
    config_file => $config || $default_config,
    username => $username,
    password => $password
);

$c->login();
print Dumper($c->replace_url($urn, $old_url, $new_url));
$c->logout();

