#!/usr/bin/env perl

use strict;
use File::Basename;
use File::Spec;
use Data::Dumper;
use lib File::Spec->catdir(dirname(__FILE__), '..', 'lib');
require NbUrnClient;
use Getopt::Long;

my $default_config = File::Spec->rel2abs(
    File::Spec->catfile(dirname(__FILE__), '..', 'config', 'config.yml')
);

my $urn;
my $series_code;
my $config;
my $username;
my $password;
GetOptions(
    "series-code" => \$series_code
    "urn=s" => \$urn,
    "username=s" => \$username,
    "password=s" => \$password,
    "config=s" => \$config
);

unless ($series_code && $urn) { die "Usage: create_urn --series-code CODE --urn URN\n"; };

my $c = new NbUrnClient(
    config_file => $config || $default_config,
    username => $username,
    password => $password
);

$c->login();
print Dumper($c->create_urn($series_code, $urn));
$c->logout();

